@using Faculdade.Models
@{
    ViewBag.Title = "Cursos";
}

<h2>Lista de Cursos</h2>

@using (Html.BeginForm()) { 
    <div class="row">
        <div class="col-md-12">
            @if (Model != null)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Descrição</th>
                          
                            


                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Curso item in Model)
                        {

                            <tr>

                                <td>@item.nome</td>
                              
                                
                                <td>
                                    <a href="/Aluno/editar/?@item.codigo">Editar</a><label>|</label>
                                    <a href="/Aluno/Excluir/?@item.codigo">Excluir</a><label>|</label>
                                    <a href="/Cursos/Disciplina/@item.codigo">Disciplina</a><label>|</label>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            }
        </div>
    </div>
}

