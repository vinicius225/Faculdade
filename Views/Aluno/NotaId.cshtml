@using Faculdade.Models
@{
    ViewBag.Title = "Notas dos alunos";
}

<h2>Lista de Alunos</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-12">
            @if (Model != null)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Aluno</th>
                            <th scope="col">Disciplina</th>
                            <th scope="col">Nota</th>
                            <th scope="col">Semestre</th>
                            <th scope="col">Ano</th>


                        </tr>
                    </thead>
                    <tbody>

                        @foreach (Nota item in Model)
                        {
                            <input type="hidden" value=@item.codigoAluno name="pega" />

                            <tr>

                                <td>@item.nomeAluno</td>
                                <td>@item.disciplina</td>
                                <td>@item.nota</td>
                                <td>@item.semestre</td>
                                <td>@item.ano</td>
                                <td>
                                    <a href="/Aluno/EditarNota/@item.codigoAluno">Editar</a> <label>|</label>
                                    <a href="/Aluno/Excluir?codigo=@item.codigoAluno">Excluir</a>
                                </td>
                            </tr>

                        }
                         

                    </tbody>
                </table>
                
            }
        </div>
    </div>
}

